<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="display text-center">Login</h1>
      <p class="text-center lead">Faca login ou crie sua conta abaixo</p>
      <div class="row">
        <div class="col-lg my-5">
          <h4>Faca seu cadastro</h4>
          <p>Se voce ainda nao tem conta, preencha o formulario abaixo</p>
          <%- include('includes/messages') %>
          <form class="form-cadastro" action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label>Seu email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="mb-3">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Criar minha conta</button>
          </form>
        </div>
        <div class="col-lg my-5">
          <h4>Faca seu login</h4>
          <p>Se voce ja tem conta, faca login abaixo</p>
          <form class="form-login" action="/login/login" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="mb-3">
              <label>Seu email</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="mb-3">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>
